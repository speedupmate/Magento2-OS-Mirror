<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="StorefrontCustomerAddressFormSection">
        <element name="messageContainer" type="text" selector=".field.vertex-message.address-message"/>
        <element name="messageText" type="text" selector=".field.vertex-message.address-message span[data-bind='text: message.text']"/>
        <element name="messageDifference" type="text" selector=".field.vertex-message.address-message .address-different"/>
        <element name="saveAddress" type="button" selector="button[data-action=save-address]" timeout="30"/>
        <element name="saveAddressAsIs" type="button" selector="button[data-action=save-as-is-address]" timeout="30"/>
    </section>
</sections>
