$attributes = $block->getCssClass() ? ' class="' . $block->getCssClass() . '"' : '';
$attr = $block->getAttributes();
if (!empty($attr)) {
    foreach ($block->getAttributes() as $attribute => $value) {
        $attributes .= ' ' . $attribute . '="' . $value . '"';
    }
};
echo
    '<' . $block->getTag() . $attributes . '>' . $block->getText() . '</' . $block->getTag() . '>';
