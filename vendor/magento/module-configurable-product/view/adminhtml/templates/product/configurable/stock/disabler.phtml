    $('[data-tab-panel=product-details]').on('stockbeforedisable', function(e) {
        var variations = $('[data-panel=product-variations]');
        if (e.productType === 'configurable' || (variations.is(':visible'))) {
            e.stopPropagation();
            return false;
        }
    });
});
