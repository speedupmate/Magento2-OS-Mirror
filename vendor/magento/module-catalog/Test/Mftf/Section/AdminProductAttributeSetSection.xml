    <section name="AdminModifyAttributesSection">
        <!-- Parameter is the attribute name -->
        <element name="dropDownAttributeByName" type="select" selector="//*[text()='{{attributeName}}']/../..//select" parameterized="true"/>
    </section>
</sections>
