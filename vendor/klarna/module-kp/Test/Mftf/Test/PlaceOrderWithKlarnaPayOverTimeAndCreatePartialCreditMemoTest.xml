<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="PlaceOrderWithKlarnaPayOverTimeAndCreatePartialCreditMemoTest">
        <annotations>
            <features value="Place Order as guest with pay over time and create partial credit memo"/>
            <stories value="Place Order as guest with pay over time and create partial credit memo"/>
            <title value="Test Klarna Pay Over Time with invoice and partial credit memo"/>
            <description
                    value="You should be able to place an order as a guest using Pay Over Time and create credit memo."/>
            <severity value="AVERAGE"/>
            <group value="klarna"/>
            <group value="klarna_pay_over_time"/>
            <group value="payments"/>
        </annotations>
        <before>
            <createData entity="_defaultCategory" stepKey="createCategory"/>
            <createData entity="_defaultProduct" stepKey="createProduct">
                <requiredEntity createDataKey="createCategory"/>
            </createData>
        </before>
        <after>
            <deleteData createDataKey="createCategory" stepKey="deleteCategory"/>
            <deleteData createDataKey="createProduct" stepKey="deleteProduct"/>
        </after>

        <actionGroup ref="KpAddToCart" stepKey="kpAddToCart">
            <argument name="purchaseQty" value="2"/>
        </actionGroup>
        <actionGroup ref="KpFillInGuest" stepKey="kpFillInGuest"/>

        <actionGroup ref="MakePaymentWithPayLater" stepKey="kpPlaceOrderWithPayLater"/>

        <!-- Add any additional steps here, eg enter DOB, SSN, etc... -->
        <grabTextFrom selector="{{KpCheckoutSuccessMainSection.orderNumber}}" stepKey="kpGrabOrderNumber"/>

        <see selector="{{KpCheckoutSuccessMainSection.success}}" userInput="Your order # is:"
             stepKey="kpSeeOrderNumber"/>
        <see selector="{{KpCheckoutSuccessMainSection.success}}"
             userInput="We'll email you an order confirmation with details and tracking info." stepKey="kpSeeEmailYou"/>

        <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin1"/>
        <!--Create Invoice in Magento Admin -->
        <actionGroup ref="FindOrderAndCreateInvoice" stepKey="findOrderAndCreateInvoice">
            <argument name="kpGrabOrderNumber" value="$kpGrabOrderNumber"/>
        </actionGroup>
        <!--Create Credit Memo in Magento Admin -->
        <actionGroup ref="FindOrderAndCreateCreditMemo" stepKey="findOrderAndCreateCreditMemo">
            <argument name="kpGrabOrderNumber" value="$kpGrabOrderNumber"/>
        </actionGroup>
    </test>
</tests>
