<?php /** @var \Temando\Shipping\Block\Adminhtml\Shipping\View\Package $block */ ?>
<?php $packages = $block->getPackages(); ?>

<section class="admin__page-section">
    <div class="admin__table-wrapper shipment-packaging">
        <?php if (!empty($packages) && !empty($packages->getArrayCopy())) : ?>
            <table class="data-table admin__table-primary packages">
                <thead>
                    <tr class="headings">
                        <th class="col-length"><span><?php echo $block->escapeHtml(__('Length')) ?></span></th>
                        <th class="col-width"><span><?php echo $block->escapeHtml(__('Width')) ?></span></th>
                        <th class="col-height"><span><?php echo $block->escapeHtml(__('Height')) ?></span></th>
                        <th class="col-weight"><span><?php echo $block->escapeHtml(__('Weight')) ?></span></th>
                    </tr>
                </thead>
                <tbody>
                    <?php foreach ($packages as $packageId => $package) : ?>
                        <tr class="package-head">
                            <td><?php echo $block->escapeHtml($package->getLength()) ?></td>
                            <td><?php echo $block->escapeHtml($package->getWidth()) ?></td>
                            <td><?php echo $block->escapeHtml($package->getHeight()) ?></td>
                            <td><?php echo $block->escapeHtml($package->getWeight()) ?></td>
                        </tr>
                        <?php if (!empty($package->getItems())) : ?>
                            <tr class="package-items">
                                <th><?php echo $block->escapeHtml(__('Contents:')) ?></th>
                                <td colspan="3">
                                    <?php foreach ($package->getItems() as $packageItem) : ?>
                                        <div class="package-item">
                                            <?php if ($packageItem->getDescription()) : ?>
                                                <?php echo $block->escapeHtml($packageItem->getDescription()) ?>
                                            <?php else : ?>
                                                <?php echo $block->escapeHtml(__('No Description')) ?>
                                            <?php endif; ?>
                                            <?php echo $block->escapeHtml(' x ');?>
                                            <?php echo $block->escapeHtml($packageItem->getQty());?>
                                        </div>
                                    <?php endforeach; ?>
                                </td>
                            </tr>
                        <?php endif; ?>
                        <tr class="package-foot">
                            <td colspan="4"></td>
                        </tr>
                    <?php endforeach; ?>
                </tbody>
            </table>
        <?php else : ?>
            <?php echo $block->escapeHtml(__('No packages found.')) ?>
        <?php endif; ?>
    </div>
</section>
